{% extends 'base.html.twig' %}

{% block contenido %}
<style>
     .familia-card {
            border: 1px solid #ddd; /* Puedes ajustar el color del borde según tus preferencias */
            border-radius: 8px;
            overflow: hidden;
            transition: box-shadow 0.3s ease;
        }

        .familia-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
</style>  
<div class="container mt-4">
        <h3>{% block title %}Suplementación{% endblock %}</h3>

        <div class="container mt-4 text-center">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                {% for familia in familias %}
                    <div class="col mb-4">
                        <div class="card familia-card h-100">
                            <img src="{{ asset('images/LOGO.png') }}" class="card-img-top mx-auto d-block" alt="Imagen de la familia {{ familia.getNombre() }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ familia.getNombre() }}</h5>
                                <a href="{{ path('productos', {'familia': familia.getId()}) }}" class="btn btn-primary">Ver Productos</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}